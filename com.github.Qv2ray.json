{
    "app-id": "com.github.Qv2ray",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "qv2ray",
    "rename-desktop-file": "qv2ray.desktop",
    "rename-icon": "qv2ray",
    "rename-appdata-file": "qv2ray.metainfo.xml",
    "cleanup": [
        "/include",
        "/lib/debug",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.kde.StatusNotifierItem-2-1",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "protobuf",
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "tag": "v3.12.3",
                    "commit": "31ebe2ac71400344a5db91ffc13c4ddfb7589f92"
                }
            ]
        },
        {
            "name": "grpc",
            "no-autogen": true,
            "cleanup": [
                "/bin"
            ],
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grpc/grpc.git",
                    "tag": "v1.30.0",
                    "commit": "9655f1f6449dca36312489f9c82560c32050af71"
                }
            ]
        },
        {
            "name": "qv2ray",
            "buildsystem": "cmake",
            "config-opts": [
                "-DEMBED_TRANSLATIONS=ON",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Qv2ray/Qv2ray.git",
                    "tag": "v2.5.0",
                    "commit": "16b22386257916edf9de0b77845c875b062b5776"
                }
            ]
        }
    ]
}

{
    "app-id": "com.github.Qv2ray",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.golang"
    ],
    "command": "qv2ray",
    "rename-desktop-file": "qv2ray.desktop",
    "rename-icon": "qv2ray",
    "rename-appdata-file": "qv2ray.metainfo.xml",
    "cleanup": [
        "/include",
        "/lib/debug",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.kde.StatusNotifierItem-2-1",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "protobuf",
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "tag": "v3.11.3",
                    "commit": "498de9f761bef56a032815ee44b6e6dbe0892cc4"
                }
            ]
        },
        {
            "name": "grpc",
            "no-autogen": true,
            "cleanup": [
                "/bin"
            ],
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grpc/grpc.git",
                    "tag": "v1.27.1",
                    "commit": "be1715d82f7b32e838565631ab7ad04850bfd4ff"
                }
            ]
        },
        {
            "name": "qv2ray",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=no_increase_build_number with_metainfo",
                "PREFIX=/app",
                "LIBS+=-L/app/lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Qv2ray/Qv2ray.git",
                    "branch": "455727c"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tools/grpc_gen.sh"
                    ]
                },
                {
                    "type": "patch",
                    "path": "00001-v2ray-path.patch"
                }
            ]
        },
        {
            "name": "v2ray",
            "buildsystem": "simple",
            "append-path": "/usr/lib/sdk/golang/bin",
            "build-commands": [
                ". /usr/lib/sdk/golang/enable.sh; export GOPATH=$PWD; go get -u v2ray.com/core/...",
                "go build -o /app/bin/v2ray v2ray.com/core/main",
                "go build -o /app/bin/v2ctl v2ray.com/core/infra/control/main"
            ]
        }
    ]
}